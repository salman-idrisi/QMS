@using clover.qms.web.Models;
@{
    Layout = "~/views/shared/_layoutrepository.cshtml";
    // Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
</head>

<body>
    <div class="slider">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="@Url.ContentAbsUrl("~/Images/computer.jpg")" style="width:100%; height:400px">
                </div>
                <div class="item">
                    <img src="@Url.ContentAbsUrl("~/Images/table.jpg")" style="width:100%;height:400px">
                </div>
                <div class="item">

                    <img src="@Url.ContentAbsUrl("~/Images/desk.jpg")" style="width:100%; height:400px">
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container-fluid" style="background:#96cbeb; padding:10px;">

        <center><strong>Welcome to Clover Quality Management System (Clover QMS)</strong></center>

    </div>

    <section class="mt-4 mb-4">
        <div class="container">

            <p>
                <strong>Clover QMS</strong> is the organisational framework of policies, processes, and process accessories to achieve the
                organisational quality objectives, as derived from our business objectives. It is an integrated approach for
                achieving customer satisfaction which involves all functions, uses quantitative methods, and focuses on
                continuously improving processes.
            </p>



            <p>The QMS consists of Processes for Project Management, Lifecycles and its supporting processes</p>

            <p>
                Please follow the processes related to your area and share your feedback and improvement suggestions on a
                regular basis.
            </p>

            <p>Thanks for the cooperation,</p>

            <span>
                Warm Regards,<br>

                <strong>Quality Team</strong>
            </span>

        </div>
    </section>
    <section>
        <div class="copy-right text-white footer-color text-center pt-2 pb-2">
            &copy; Clover Infotech Private Limited. All rights reserved.
        </div>
    </section>

</body>

</html>
