@model clover.qms.model.Users
@using clover.qms.web.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="@Url.ContentAbsUrl("~/Content/buttons.css")" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (ViewBag.pcrreport == 0 && ViewBag.pcrschedule == 0)
        {
            <div class="row">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title" style="text-align:center;color:#00239B;font-size:20px">
                        Delete User
                    </h3>
                </div>
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.UserName)
                <center><h3>Are you sure you want to delete this user?</h3></center>
                <ul class="set_btn">
                    <li>
                        <input type="submit" value="Delete" class="btn btn-success" />

                    </li>

                </ul>
            </div>
        }
        else
        {
            <div class="row">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title" style="text-align:center;color:#00239B;font-size:20px">
                        Alert Message
                    </h3>
                </div>
                <center><h3>Cannot delete the selected User, because all the records associated with this User are not closed.</h3></center>
                <ul class="set_btn">
                    <li>
                        <a href=@Url.Action("UserRoles", "AssignRoles") class="btn btn-success">OK</a>
                    </li>

                </ul>

            </div>

        }
    }
</body>
</html>
