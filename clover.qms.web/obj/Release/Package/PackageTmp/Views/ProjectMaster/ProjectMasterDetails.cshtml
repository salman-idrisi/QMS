@model clover.qms.model.ProjectMaster
@using clover.qms.web.Models;
@{
    Layout = null;
}
@*<script src="@Url.ContentAbsUrl("~/Scripts/jquery-3.5.1.min.js")"></script>*@
<link href="@Url.ContentAbsUrl("~/Content/buttons.css")" rel="stylesheet" />
<script src="@Url.ContentAbsUrl("~/Scripts/CheckBox.js")"></script>
<style>
    .btn-danger {
        color: #fff;
        background-color: #d9534f;
        border-color: #d43f3a;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    Model.technology = ViewBag.PT;
    Model.lifecycle = ViewBag.PLC;
    Model.users = ViewBag.user;
    Model.region = ViewBag.PR;
    Model.pStatus = ViewBag.PStatus;

    <div class="form-horizontal table-responsive" align="center" style="margin-top:-10px">

        <center> <h5 class="modal-header" style="text-align:center">Project Details</h5></center>
        <table class="table table-hover table-bordered table_paddi_sec" border="1">
            <tr>
                <td style="background-color:#D3D3D3">Account Name</td>
                <td> @Model.AccountName</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">Project Name</td>
                <td> @Model.ProjectName</td>
            </tr>
            @foreach (var technology in Model.technology.Where(x => x.technologyID == Model.technologyID))
            {
                <tr>
                    <td style="background-color:#D3D3D3">Technology</td>
                    <td>@technology.technologyName</td>
                </tr>
            }
            @foreach (var lifecycle in Model.lifecycle.Where(x => x.lifecycleID == Model.lifecycleID))
            {
                <tr>
                    <td style="background-color:#D3D3D3">Project Life Cycle</td>
                    <td> @lifecycle.lifecycleName</td>
                </tr>
            }
            @foreach (var user in Model.users.Where(x => x.UserName == Model.managerName))
            {
                string name = user.FirstName + " " + user.LastName;
                <tr>
                    <td style="background-color:#D3D3D3">Project Manager</td>
                    <td>@name</td>
                </tr>
            }
            @foreach (var user in Model.users.Where(x => x.UserName == Model.tlName_1))
            {
                string name = user.FirstName + " " + user.LastName;
                <tr>
                    <td style="background-color:#D3D3D3">Project TL/SPOC 1</td>
                    <td>@name</td>
                </tr>
            }
            @foreach (var user in Model.users.Where(x => x.UserName == Model.tlName_2))
            {
                string name = user.FirstName + " " + user.LastName;
                <tr>
                    <td style="background-color:#D3D3D3">Project TL/SPOC 2</td>
                    <td>@name</td>
                </tr>
            }

            @foreach (var region in Model.region.Where(x => x.regionID == Model.regionID))
            {
                <tr>
                    <td style="background-color:#D3D3D3">Location</td>
                    <td> @region.regionName</td>
                </tr>
            }

            <tr>
                <td style="background-color:#D3D3D3">Delivery Manager</td>
                <td> @Model.deliverymanagerName</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">Delivery Head</td>
                <td> @Model.deliveryheadName</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">Start Date</td>
                <td>@Model.startdate.ToString("dd/MMM/yyyy")</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">End Date</td>
                <td>@Model.enddate.ToString("dd/MMM/yyyy")</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">Team Size</td>
                <td>@Model.teamSize</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">Planned Effort</td>
                <td>@Model.plannedEffort</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">Billing Type</td>
                <td>@Model.billingType</td>
            </tr>
            <tr>
                <td style="background-color:#D3D3D3">SQA</td>
                <td>@Model.SQA</td>
            </tr>
            @foreach (var status in Model.pStatus.Where(x => x.statusID == Model.statusID))
            {
                <tr>
                    <td style="background-color:#D3D3D3">Status</td>
                    <td>@status.statusName</td>
                </tr>
            }

        </table>
    </div>
    <ul class="set_btn">
        <li>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </li>
    </ul>


}

